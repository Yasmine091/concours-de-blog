<!DOCTYPE html>
<html>
<%- include('../parts/head');%>

  <body>
    <header>
      <%- include('../parts/navigation');%>
    </header>
    <main>

      <div class="container">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
          <% for(let i=0; i < news.length; i++){ %>
            <div class="col mb-4">
              <div class="card shadow">
                <img src="<%= news[i].img %>" class="card-img-top" alt="Image de l'article <%= news[i].title %>
">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= news[i].title %>
                  </h5>
                  <p class="card-text">
                    <%= news[i].content.substring(0,100); %>
                  </p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                  <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-7 text-left">
                      <span class="badge badge-info my-2 d-block">
                        Auteur : <%= news[i].author_firstname + " " + news[i].author_lastname %>
                      </span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-5 text-right">
                      <span class="badge badge-info my-2 d-block"> Publi√©e le :
                        <%= new Date(news[i].published_at).getDate() + "/" + new Date(news[i].published_at).getMonth()+1
                          + "/" + new Date(news[i].published_at).getFullYear(); %>
                      </span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                    <a href="/news/<%= news[i].id %>" class="btn btn-dark btn-sm d-block" type="button" type="submit">Lire
                      la suite</a>
                  </div>
                  </div>
                </small>
                </div>
              </div>
            </div>


            <% } %>
        </div>
      </div>

    </main>
    <%- include('../parts/footer');%>
  </body>

</html>